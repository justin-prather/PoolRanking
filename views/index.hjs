<!DOCTYPE html>
<html>

<head>
  {{=[[ ]]=}}
  <title>[[ title ]]</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap -->
  <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
  <link href="/bootstrap/css/bootstrap-theme.min.css" rel="stylesheet" media="screen">

</head>

<body class="text-center">
  <h1>[[ title ]]</h1>
  <p>Welcome [[ title ]]</p>

  <div class="container">

    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <div id="player-head" class="slider border">
          New Player
          <br>
          <div id="player-form">
            <form role="form" class="form-inline">

              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">First Name</div>
                  <label for="first-name" class="sr-only">First Name</label>
                  <input type="text" class="form-control" id="first-name">
                </div>
              </div>

              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">Last Name</div>
                  <label for="last-name" class="sr-only">Last Name</label>
                  <input type="text" class="form-control" id="last-name">
                </div>
              </div>

              <button type="button" id="submit-player" class="btn btn-default">Submit</button>

            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <div id="match-head" class="slider border">
          New Match
          <br>
          <div id="match-form">
            <form role="form" class="form-inline">

              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">Winner</div>
                  <label for="first-name" class="sr-only">Winner</label>
                  <select type="text" class="form-control" id="Winner">
                    <template id="dropdown-template">
                      <option value="{{elo_rank}}">{{Name_First}} {{Name_Last}}</option>
                    </template>
                  </select>
                </div>
              </div>

              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">Looser</div>
                  <label for="last-name" class="sr-only">Looser</label>
                  <input type="text" class="form-control" id="Looser">
                </div>
              </div>

              <button type="button" id="submit-match" class="btn btn-default">Submit</button>

            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <table class="table table-hover table-bordered">

          <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Wins</th>
              <th>Losses</th>
            </tr>
          </thead>

          <tbody id="table-body">

            <template id="table-entry-template">
              <tr id="{{_id}}" class="elo-rank-{{elo_rank}}">
                <td>{{Name_First}}</td>
                <td>{{Name_Last}}</td>
                <td>{{Wins}}</td>
                <td>{{Loses}}</td>
              </tr>
            </template>

          </tbody>

        </table>

        <div class="spinner hidden">
          <div class="dot1"></div>
          <div class="dot2"></div>
        </div>

      </div>
      <div class="col-md-2"></div>
    </div>

  </div>
  <p>[[paragraph]]</p>
  <script src="/bower_components/jquery/dist/jquery.js"></script>
  <script src="/bootstrap/js/bootstrap.min.js"></script>
  <script src="/bower_components/mustache/mustache.js"></script>
  <script src="/javascripts/functions.js"></script>
</body>

</html>
